[Unit]
Description=ButterflyBot Legal Assistant API
After=network.target

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/opt/butterflybot
EnvironmentFile=/opt/butterflybot/.env
ExecStart=/opt/butterflybot/venv/bin/gunicorn -k uvicorn.workers.UvicornWorker -w 2 -b 127.0.0.1:8001 main:app
Restart=always
RestartSec=5
TimeoutStopSec=30

[Install]
WantedBy=multi-user.target
